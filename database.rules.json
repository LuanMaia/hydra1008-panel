{
  "rules": {
    ".read": false,
    ".write": false,
    "character": {
      "$character_id": {
        ".read": "data.child('public').exists() && data.child('public').val() === true",
        "life": {
          ".write": "newData.val() <= data.parent().child('maxLife').val() && newData.val() >= 0"
        }
      }
    }
  }
}
